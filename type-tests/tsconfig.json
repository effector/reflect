{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "module": "esnext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strict": true,
    "jsx": "react",
    "strictNullChecks": true,
    "paths": {
      "@effector/reflect": ["./public-types/reflect.d.ts"],
      "@effector/reflect/scope": ["./public-types/scope.d.ts"]
    }
  }
}
