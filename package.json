{
  "name": "@effector/reflect",
  "version": "0.0.0-real-version-will-be-set-on-ci",
  "repository": "git@github.com:effector/reflect.git",
  "description": "☄️ Attach effector stores to react components without hooks",
  "maintainers": [
    "Sergey Sova <mail@sergeysova.com> (https://sova.dev)",
    "e.fedotov <fedotov1290@gmail.com>"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./reflect.mjs",
      "require": "./reflect.cjs.js",
      "default": "./reflect.mjs"
    },
    "./reflect.mjs": "./reflect.mjs",
    "./ssr.mjs": "./ssr.mjs",
    "./ssr": {
      "import": "./ssr.mjs",
      "require": "./ssr.js",
      "default": "./ssr.mjs"
    }
  },
  "main": "reflect.cjs.js",
  "module": "reflect.mjs",
  "typings": "index.d.ts",
  "files": [
    "Readme.md",
    "index.d.ts",
    "index.js",
    "index.mjs",
    "index.mjs.map",
    "index.umd.js",
    "index.umd.js.map",
    "ssr.d.ts",
    "ssr.js",
    "ssr.js.map",
    "ssr.umd.js",
    "ssr.umd.js.map"
  ],
  "scripts": {
    "test": "jest",
    "build": "yarn clear-build && yarn rollup --config ./rollup.config.js",
    "clear-build": "rm -f index.* && rm -f reflect.* && rm -f ssr.* && rm -rf dist && rm -rf core",
    "test-build": "yarn test ./dist-test",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@eslint-kit/eslint-config-base": "^2.1.2",
    "@eslint-kit/eslint-config-node": "^2.0.0",
    "@eslint-kit/eslint-config-prettier": "^2.0.0",
    "@eslint-kit/eslint-config-typescript": "^3.1.2",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/parser": "^4.8.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "effector": "^22.0.6",
    "effector-react": "^22.0.4",
    "eslint": "^7.14.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "microbundle": "^0.14.2",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.59.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "uglify-es": "^3.3.9"
  },
  "peerDependencies": {
    "effector": "^21.8.0 || ^22.0.0",
    "effector-react": "^21.3.0 || ^22.0.0",
    "react": "^16.14.0 || ^17.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint ./src",
      "pre-push": "yarn test ./src"
    }
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "rollup-plugin-terser": "^7.0.2"
  }
