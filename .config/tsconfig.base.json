{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@effector/reflect": ["../dist/reflect.d.ts"],
      "@effector/reflect/scope": ["../dist/scope.d.ts"]
    }
  },
  "include": ["../src"],
  "exclude": ["../typings"]
}
